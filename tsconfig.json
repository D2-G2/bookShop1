{
  "compilerOptions": {
    "target": "ESNext",
    "moduleDetection": "force",

    "module": "CommonJS",
    "allowJs": true,
    "outDir": "dist",
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
